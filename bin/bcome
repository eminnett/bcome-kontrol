#!/usr/bin/env ruby

# (C) Guillaume Roderick (webzakimbo)
# MIT licence.

require 'irb'
require "irb/completion"
require 'bcome'
require 'yaml'

START_PROMPT = "bcome"
VERBOSE = true

breadcrumbs = ARGV[0]
command = ARGV[1]

begin
  Bcome::Bootup.do(breadcrumbs: breadcrumbs, command: command)
rescue Bcome::Exception::Base => e
  puts "\t\n#{e.message}\n".red 
end
