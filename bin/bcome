#!/usr/bin/env ruby

# (C) Guillaume Roderick (webzakimbo)
# MIT licence.

require 'irb'
require 'irb/completion'
require 'bcome'
require 'yaml'

breadcrumbs = ARGV[0]
argument = ARGV[1]

begin
  ::Bcome::Bootup.do(breadcrumbs: breadcrumbs, argument: argument)
rescue Bcome::Exception::Base => e
  puts e.pretty_display
rescue Excon::Error::Socket => e
  puts "\nNo network access - please check you connection and try again\n".red
  puts e.inspect
end
